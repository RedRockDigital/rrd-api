{
    "name": "redrockdigital/bedrock",
    "description": "Our in-house BoilerPlated API BedRock",
    "keywords": [
        "redrockdigital",
        "bedrock"
    ],
    "homepage": "https://github.com/redrockdigital/bedrock",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Red Rock Digital Ltd",
            "email": "support@redrockdigital.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "RedRockDigital\\BedRock\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RedRockDigital\\BedRock\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "RedRockDigital\\BedRock\\BedRockServiceProvider"
            ],
            "aliases": {
                "BedRock": "RedRockDigital\\BedRock\\BedRockFacade"
            }
        }
    }
}
